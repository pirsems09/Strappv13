<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    android:layout_gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xyz.arifguler.strappv13.DetailSearch"
    tools:showIn="@layout/activity_detail_search"
    android:background="@drawable/allback">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginBottom="55dp">

        <EditText
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/da"
            android:textStyle="italic"
            android:textColorHint="#fff"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sehir"
            android:hint="  Ister Sehir  "
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:gravity="center"
            android:background="@drawable/da"
            android:textStyle="italic"
            android:textColorHint="#fff"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anahtarkelime"
            android:hint="  Ister Kelime  "
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout4">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cafe"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:onClick="onRadioButtonClicked"
                    android:checked="false" />
                <RadioButton android:id="@+id/camii"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camii"
                    android:onClick="onRadioButtonClicked"
                    android:checked="false" />
                <RadioButton android:id="@+id/otel"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otel"
                    android:onClick="onRadioButtonClicked"
                    android:checked="false" />
                <RadioButton android:id="@+id/restoran"
                    android:textSize="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restoran"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

    </LinearLayout>

    <Button
        android:background="@drawable/da"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tara"
        android:id="@+id/search"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true" />

    <TextView

        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bazi Ornek Kelimeler"
        android:id="@+id/textView9"
        android:layout_above="@+id/linearLayout4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
