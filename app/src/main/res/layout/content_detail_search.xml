<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    android:layout_gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xyz.arifguler.strappv13.DetailSearch"
    tools:showIn="@layout/activity_detail_search"
    android:background="@drawable/allback">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginBottom="25dp">

        <EditText
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/da"
            android:textStyle="italic"
            android:textColorHint="#fff"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anahtarkelime"
            android:hint=" Ister Kelime "
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:gravity="center"
            android:background="@drawable/da"
            android:textStyle="italic"
            android:textColorHint="#fff"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sehir"
            android:hint=" Ister Sehir "
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginBottom="25dp"
        android:id="@+id/linearLayout4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/search"
            android:layout_toRightOf="@+id/search"
            android:id="@+id/linearLayout2">

            <CheckBox
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otel"
                android:id="@+id/checkBox"
                android:checked="false"
                android:onClick="checboxicin"

                />

            <CheckBox
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camii"
                android:id="@+id/checkBox2"
                android:checked="false"
                android:onClick="checboxicin"
                 />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/radioButton" />

            <CheckBox
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cafe"
                android:id="@+id/checkBox3"
                android:checked="false"
                android:onClick="checboxicin"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_alignBottom="@+id/linearLayout4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <CheckBox
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eylence"
                android:id="@+id/checkBox4"
                android:checked="false"
                android:onClick="checboxicin"
                />

            <CheckBox
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yemek"
                android:id="@+id/checkBox5"
                android:checked="false"
                android:onClick="checboxicin"/>

            <CheckBox
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alışveriş"
                android:id="@+id/checkBox6"
                android:checked="false"
                android:onClick="checboxicin"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:background="@drawable/da"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tara"
        android:id="@+id/search"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
